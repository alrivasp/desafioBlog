<div class="container">
    <div class="m-3">
        <h3 class="text-center">FORMULARIO INGRESO DE ARTICULO <i class="fas fa-clipboard fa-1x"></i></h3>
    </div>
    <div class="border border-dark rounded ">
        <form method="get" action="/posts/create" class="m-5" id="create_posts">
            <div class="form-group">
                <label for="titleArticle">Titulo</label>
                <input type="text" class="form-control" id="titleArticle" aria-describedby="articlelHelp" name="title" placeholder="Ingrese Titulo" >
                <small id="articlelHelp" class="form-text text-muted">Ingreso de Titulo de articulo es obligatorio.</small>
            </div>
            <div class="form-group">
                <label for="linkImagen">Imagen</label>
                <input type="url" class="form-control" id="linkImagen" aria-describedby="imagenlHelp" name="image_url" placeholder="Ingrese Link Imagen" >
                <small id="imagenlHelp" class="form-text text-muted">Ingreso de Link de Imagen es obligatorio.</small>
            </div>
            <div class="form-group">
                <label for="contentArticle">Contenido</label>
                <textArea type="text" class="form-control" id="contentArticle" aria-describedby="contentlHelp" name="content" placeholder="Detalle de Articulo" ></textArea>
                <small id="contentlHelp" class="form-text text-muted">Ingreso de Contenido es obligatorio.</small>
            </div>
            <button type="submit" class="btn btn-dark">Registrar</button>
        </form>
    </div>
</div>


