<div class="container m-5">    
    <div class="border border-dark rounded p-5 m-5">
       <h3 class="text-center mb-3 font-weight-bold"" >ARTICULOS</h3>
       <% @post.each do |post| %>
        <div class="shadow p-3 mb-5 bg-white rounded card mb-3" style="max-width: auto;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <%= link_to(image_tag(post.image_url, class: "card-img", alt: "Edit Entry")) %>
                </div>
                <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <p class="card-text"><%= post.content%></p>
                    <p class="card-text"><small class="text-muted">Fecha Ingreso <%= post.created_at%></small></p>
                </div>
                </div>
            </div>
        </div>
        <%end%>
    </div>
</div>
