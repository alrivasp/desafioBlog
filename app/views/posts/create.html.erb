<div class="border border-dark rounded m-5 p-5">
    <% if @post.errors.any? %>
        <div id="Error_explanation">
            <h2><i class="fas fa-exclamation-triangle text-warning"></i>
                <%= pluralize(@post.errors.count, "error" )%>
                prohibited this Post from being saved:
            </h2>
            <ul class="ml-5 pl-5">
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% else %>
        <h1 class="text-center">Se registro con exito el Post <i class="fas fa-pizza-slice text-success"></i></h1>
    <% end %>
</div>
